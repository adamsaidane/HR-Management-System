@model HRMS.ViewModels.RegisterFormViewModel
@{
    ViewData["Title"] = "Créer un Utilisateur";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-user-plus me-2"></i>Créer un Utilisateur</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" asp-action="Register">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                    }

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nom d'utilisateur *</label>
                            <input type="text" name="username" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email *</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Mot de passe *</label>
                            <input type="password" name="password" class="form-control" required minlength="6" />
                            <small class="text-muted">Minimum 6 caractères</small>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Confirmer le mot de passe</label>
                            <input type="password" name="confirmPassword" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Rôle *</label>
                            <select name="role" class="form-select" required>
                                <option value="">-- Sélectionner un rôle --</option>
                                <option value="0">Admin RH</option>
                                <option value="1">Manager</option>
                                <option value="2">Employé</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Employé associé (optionnel)</label>
                            <select name="employeeId" class="form-select">
                                <option value="">-- Aucun --</option>
                                @foreach (var employee in Model.AvailableEmployees)
                                {
                                    <option value="@employee.EmployeeId">@employee.FullName - @employee.Matricule</option>
                                }
                            </select>
                            <small class="text-muted">Sélectionnez un employé pour associer le compte</small>
                        </div>

                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Informations sur les rôles:</strong>
                                <ul class="mb-0 mt-2">
                                    <li><strong>Admin RH:</strong> Accès complet, gestion de tous les modules</li>
                                    <li><strong>Manager:</strong> Gestion d'équipe, recrutement, consultation</li>
                                    <li><strong>Employé:</strong> Consultation profil personnel uniquement</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Créer l'Utilisateur
                        </button>
                        <a asp-action="Login" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>