@using HRMS.Enums
@model HRMS.ViewModels.EmployeeFormViewModel
@{
    ViewData["Title"] = "Nouvel Employé";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-user-plus me-2"></i>Ajouter un Employé</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <h4 class="mb-3"><i class="fas fa-user me-2"></i>Informations Personnelles</h4>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select"
                            asp-items="Html.GetEnumSelectList<Gender>()">
                        <option value="">-- Sélectionner le sexe --</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label" asp-for="Photo">Photo</label>
                    <input type="file" asp-for="Photo" class="form-control" accept="image/*" data-val="false" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <h4 class="mb-3"><i class="fas fa-briefcase me-2"></i>Informations Professionnelles</h4>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="DepartmentId" class="form-label"></label>
                    <select asp-for="DepartmentId" id="departmentSelect" class="form-select">
                        <option value="">-- Sélectionner un département --</option>
                        @foreach (var dept in Model.Departments as List<HRMS.Models.Department>)
                        {
                            <option value="@dept.DepartmentId">@dept.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PositionId" class="form-label"></label>
                    <select asp-for="PositionId" id="positionSelect" class="form-select">
                        <option value="">-- Sélectionner un poste --</option>
                        @foreach (var pos in Model.Positions as List<HRMS.Models.Position>)
                        {
                            <option value="@pos.PositionId" data-department="@pos.DepartmentId">
                                @pos.Title (Salaire: @pos.BaseSalary.ToString("N0") DT)
                            </option>
                        }
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="HireDate" class="form-label"></label>
                    <input asp-for="HireDate" class="form-control" type="date" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ContractType" class="form-label"></label>
                    <select asp-for="ContractType" class="form-select">
                        <option value="">-- Type de contrat --</option>
                        @foreach (var type in Model.ContractTypes)
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                    <span asp-validation-for="ContractType" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-times me-2"></i>Annuler
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const departmentSelect = document.getElementById('departmentSelect');
            const positionSelect = document.getElementById('positionSelect');

            const allOptions = Array.from(positionSelect.querySelectorAll('option[data-department]'));

            departmentSelect.addEventListener('change', function() {
                const deptId = this.value;

                positionSelect.innerHTML = '<option value="">-- Sélectionner un poste --</option>';

                if (!deptId) return;

                const filtered = allOptions.filter(opt => opt.dataset.department === deptId);

                if (filtered.length === 0) {
                    const option = document.createElement('option');
                    option.value = '';
                    option.text = '-- Aucun poste disponible --';
                    positionSelect.appendChild(option);
                    positionSelect.disabled = true;
                } else {
                    positionSelect.disabled = false;
                    filtered.forEach(opt => positionSelect.appendChild(opt));
                    positionSelect.selectedIndex = 1;
                }
            });

            if (departmentSelect.value) {
                departmentSelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
}