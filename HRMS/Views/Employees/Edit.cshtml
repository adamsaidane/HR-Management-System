@model HRMS.ViewModels.EmployeeFormViewModel
@{
    ViewData["Title"] = "Modifier Employé";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-user-edit me-2"></i>Modifier Employé</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="EmployeeId" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <h4 class="mb-3"><i class="fas fa-user me-2"></i>Informations Personnelles</h4>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Nouvelle Photo</label>
                    <input type="file" name="photoFile" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <small class="text-muted">Photo actuelle: <img src="@Model.PhotoPath" style="width:30px;height:30px;border-radius:50%;" /></small>
                    }
                </div>

                <div class="col-12">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <h4 class="mb-3"><i class="fas fa-briefcase me-2"></i>Informations Professionnelles</h4>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="DepartmentId" class="form-label"></label>
                    <select asp-for="DepartmentId" class="form-select">
                        @foreach (var dept in Model.Departments)
                        {
                            <option value="@dept.DepartmentId">@dept.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PositionId" class="form-label"></label>
                    <select asp-for="PositionId" class="form-select">
                        @foreach (var pos in Model.Positions)
                        {
                            <option value="@pos.PositionId">@pos.Title</option>
                        }
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="HireDate" class="form-label"></label>
                    <input asp-for="HireDate" class="form-control" type="date" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ContractType" class="form-label"></label>
                    <select asp-for="ContractType" class="form-select">
                        @foreach (var type in Model.ContractTypes)
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                    <span asp-validation-for="ContractType" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Enregistrer
                </button>
                <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-times me-2"></i>Annuler
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}