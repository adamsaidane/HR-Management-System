@using HRMS.Enums
@model HRMS.ViewModels.EmployeeFormViewModel
@{
    ViewData["Title"] = "Modifier Employé";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-user-edit me-2"></i>Modifier l'Employé</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="Edit" asp-route-id="@Model.EmployeeId" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <h4 class="mb-3"><i class="fas fa-user me-2"></i>Informations Personnelles</h4>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select"
                            asp-items="Html.GetEnumSelectList<Gender>()">
                        <option value="">-- Sélectionner le sexe --</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label" asp-for="Photo">Photo</label>
                    <input type="file" asp-for="Photo" class="form-control" accept="image/*" data-val="false"/>
                    @if (ViewBag.CurrentPhoto != null)
                    {
                        <div class="mt-2">
                            <img src="@ViewBag.CurrentPhoto" alt="Photo actuelle" class="img-thumbnail" style="max-height:120px;" />
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <h4 class="mb-3"><i class="fas fa-briefcase me-2"></i>Informations Professionnelles</h4>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="DepartmentId" class="form-label"></label>
                    <select asp-for="DepartmentId" class="form-select">
                        @foreach (var dept in Model.Departments)
                        {
                            <option value="@dept.DepartmentId" selected="@(Model.DepartmentId == dept.DepartmentId)">@dept.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PositionId" class="form-label"></label>
                    <select asp-for="PositionId" class="form-select">
                        @foreach (var pos in Model.Positions)
                        {
                            <option value="@pos.PositionId" selected="@(Model.PositionId == pos.PositionId)">@pos.Title</option>
                        }
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="HireDate" class="form-label"></label>
                    <input asp-for="HireDate" class="form-control" type="date" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ContractType" class="form-label"></label>
                    <select asp-for="ContractType" class="form-select">
                        @foreach (var type in Model.ContractTypes)
                        {
                            <option value="@type" selected="@(Model.ContractType == type)">@type</option>
                        }
                    </select>
                    <span asp-validation-for="ContractType" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Enregistrer les modifications
                </button>
                <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-times me-2"></i>Annuler
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}