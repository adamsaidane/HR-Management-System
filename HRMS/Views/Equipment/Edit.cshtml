@model HRMS.Models.Equipment
@{
    ViewData["Title"] = "Modifier l'Équipement";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-edit me-2"></i>Modifier l'Équipement</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="EquipmentId" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="EquipmentType" class="form-label"></label>
                            <select asp-for="EquipmentType" class="form-select">
                                <option value="">-- Type d'équipement --</option>
                                <option value="Ordinateur">Ordinateur</option>
                                <option value="Ordinateur Portable">Ordinateur Portable</option>
                                <option value="Téléphone">Téléphone</option>
                                <option value="Écran">Écran</option>
                                <option value="Tablette">Tablette</option>
                                <option value="Badge">Badge</option>
                                <option value="Tenue">Tenue professionnelle</option>
                                <option value="Clés">Clés</option>
                                <option value="Véhicule">Véhicule</option>
                                <option value="Autre">Autre</option>
                            </select>
                            <span asp-validation-for="EquipmentType" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SerialNumber" class="form-label"></label>
                            <input asp-for="SerialNumber" class="form-control" />
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Brand" class="form-label"></label>
                            <input asp-for="Brand" class="form-control" placeholder="Ex: Dell, HP, Samsung..." />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="Ex: Latitude 5520, iPhone 13..." />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PurchaseDate" class="form-label"></label>
                            <input asp-for="PurchaseDate" class="form-control" type="date" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="0">Disponible</option>
                                <option value="1">Affecté</option>
                                <option value="2">En Maintenance</option>
                                <option value="3">Retiré</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                            <small class="text-muted d-block mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Si vous définissez le statut à "Affecté", l'équipement doit être assigné à un employé.
                            </small>
                        </div>
                    </div>

                    <!-- Assignment Information -->
                    @if (Model.EquipmentAssignments?.Any(ea => ea.ReturnDate == null) == true)
                    {
                        var assignment = Model.EquipmentAssignments.FirstOrDefault(ea => ea.ReturnDate == null);
                        <div class="alert alert-info mt-4" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>Information d'affectation
                            </h6>
                            <p class="mb-2">
                                <strong>Assigné à:</strong> @(assignment?.Employee?.FirstName + " " + assignment?.Employee?.LastName)
                            </p>
                            <p class="mb-2">
                                <strong>Date d'affectation:</strong> @assignment?.AssignmentDate.ToString("dd/MM/yyyy")
                            </p>
                            <p class="mb-0">
                                <strong>État:</strong> @assignment?.Condition
                            </p>
                        </div>
                    }

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save me-2"></i>Mettre à jour
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
