@model HRMS.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="page-header">
    <h1><i class="fa fa-dashboard"></i> Tableau de Bord</h1>
</div>

<!-- Statistiques Principales -->
<div class="row">
    <div class="col-md-3">
        <div class="stat-card">
            <i class="fa fa-users icon text-primary"></i>
            <h3>Employés Actifs</h3>
            <div class="value text-primary">@Model.ActiveEmployees</div>
            <small>sur @Model.TotalEmployees total</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <i class="fa fa-briefcase icon text-success"></i>
            <h3>Offres Ouvertes</h3>
            <div class="value text-success">@Model.OpenJobOffers</div>
            <small>@Model.PendingCandidates candidats en attente</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <i class="fa fa-money icon text-warning"></i>
            <h3>Masse Salariale</h3>
            <div class="value text-warning">@Model.TotalMonthlySalary.ToString("N0") DT</div>
            <small>Moyenne: @Model.AverageSalary.ToString("N0") DT</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <i class="fa fa-laptop icon text-info"></i>
            <h3>Équipements</h3>
            <div class="value text-info">@Model.AssignedEquipment</div>
            <small>@Model.AvailableEquipment disponibles</small>
        </div>
    </div>
</div>

<!-- Graphiques -->
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart"></i> Employés par Département</h3>
            </div>
            <div class="panel-body">
                <canvas id="departmentChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pie-chart"></i> Répartition par Statut</h3>
            </div>
            <div class="panel-body">
                <canvas id="statusChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Évolution Salariale -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-line-chart"></i> Évolution de la Masse Salariale</h3>
            </div>
            <div class="panel-body">
                <canvas id="salaryChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Promotions Récentes -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-trophy"></i> Promotions Récentes</h3>
            </div>
            <div class="panel-body">
                @if (Model.RecentPromotions != null && Model.RecentPromotions.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Employé</th>
                                <th>Ancien Poste</th>
                                <th>Nouveau Poste</th>
                                <th>Date</th>
                                <th>Augmentation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var promo in Model.RecentPromotions)
                            {
                                <tr>
                                    <td><strong>@promo.EmployeeName</strong></td>
                                    <td>@promo.OldPosition</td>
                                    <td><span class="badge badge-success">@promo.NewPosition</span></td>
                                    <td>@promo.PromotionDate.ToString("dd/MM/yyyy")</td>
                                    <td class="text-success"><strong>+@promo.SalaryIncrease.ToString("N0") DT</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">Aucune promotion récente</p>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
<script>
    // Vérifier que les données existent avant de créer les graphiques
    @if (Model.EmployeesByDepartment != null && Model.EmployeesByDepartment.Any())
    {
        <text>
        var deptCtx = document.getElementById('departmentChart').getContext('2d');
        new Chart(deptCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.EmployeesByDepartment.Keys)),
                datasets: [{
                    label: 'Nombre d\'employés',
                    data: @Html.Raw(Json.Serialize(Model.EmployeesByDepartment.Values)),
                    backgroundColor: 'rgba(52, 152, 219, 0.7)',
                    borderColor: 'rgba(52, 152, 219, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: { y: { beginAtZero: true } }
            }
        });
        </text>
    }

    @if (Model.EmployeesByStatus != null && Model.EmployeesByStatus.Any())
    {
        <text>
        var statusCtx = document.getElementById('statusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.EmployeesByStatus.Keys)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.EmployeesByStatus.Values)),
                    backgroundColor: [
                        'rgba(46, 204, 113, 0.7)',
                        'rgba(241, 196, 15, 0.7)',
                        'rgba(231, 76, 60, 0.7)'
                    ]
                }]
            },
            options: { responsive: true }
        });
        </text>
    }

    @if (Model.SalaryEvolution != null && Model.SalaryEvolution.Any())
    {
        <text>
        var salaryCtx = document.getElementById('salaryChart').getContext('2d');
        new Chart(salaryCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.SalaryEvolution.Select(s => s.Month))),
                datasets: [{
                    label: 'Masse Salariale Mensuelle (DT)',
                    data: @Html.Raw(Json.Serialize(Model.SalaryEvolution.Select(s => s.TotalSalary))),
                    backgroundColor: 'rgba(155, 89, 182, 0.2)',
                    borderColor: 'rgba(155, 89, 182, 1)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                scales: { y: { beginAtZero: true } }
            }
        });
        </text>
    }
</script>
}
