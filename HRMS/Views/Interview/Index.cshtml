@model HRMS.ViewModels.PaginatedList<HRMS.Models.Interview>
@{
    ViewData["Title"] = "Entretiens";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="fas fa-handshake me-2"></i>Gestion des Entretiens</h1>
        <small class="text-muted">@Model.TotalCount entretien(s) au total</small>
    </div>
    <a href="@Url.Action("Candidates", "Recruitment")" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Programmer un Entretien
    </a>
</div>

<!-- Filtres -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="result" class="form-label">Filtrer par Résultat:</label>
                <select id="result" name="result" class="form-select">
                    <option value="">-- Tous les Résultats --</option>
                    <option value="0" selected="@(ViewBag.SelectedResult == 0)">En Attente</option>
                    <option value="1" selected="@(ViewBag.SelectedResult == 1)">Réussi</option>
                    <option value="2" selected="@(ViewBag.SelectedResult == 2)">Échoué</option>
                    <option value="3" selected="@(ViewBag.SelectedResult == 3)">Autre Entretien Nécessaire</option>
                </select>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-filter me-1"></i>Appliquer
                </button>
                <a href="@Url.Action("Index", "Interview")" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i>Réinitialiser
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Liste des Entretiens -->
<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Candidat</th>
                            <th>Date d'Entretien</th>
                            <th>Lieu</th>
                            <th>Interviewer</th>
                            <th>Résultat</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var interview in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@(interview.Candidate?.FirstName ?? "") @(interview.Candidate?.LastName ?? "")</strong>
                                    <br>
                                    <small class="text-muted">@(interview.Candidate?.Email ?? "N/A")</small>
                                </td>
                                <td>
                                    @interview.InterviewDate.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(interview.Location))
                                    {
                                        <i class="fas fa-map-marker-alt me-1"></i>@interview.Location
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(interview.InterviewerName))
                                    {
                                        @interview.InterviewerName
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @switch (interview.Result)
                                    {
                                        case HRMS.Enums.InterviewResult.Réussi:
                                            <span class="badge bg-success">Réussi</span>
                                            break;
                                        case HRMS.Enums.InterviewResult.Échoué:
                                            <span class="badge bg-danger">Échoué</span>
                                            break;
                                        case HRMS.Enums.InterviewResult.AutreEntretienNécessaire:
                                            <span class="badge bg-warning">Autre Entretien</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">En Attente</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (interview.InterviewDate > DateTime.Now)
                                    {
                                        <span class="badge bg-info">À Venir</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">Passé</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "Interview", new { id = interview.InterviewId })" 
                                       class="btn btn-sm btn-info" title="Voir Détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (User.IsInRole("AdminRH") || User.IsInRole("Manager"))
                                    {
                                        <a href="@Url.Action("Edit", "Interview", new { id = interview.InterviewId })" 
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex - 1, result = ViewBag.SelectedResult })">
                                <i class="fas fa-chevron-left me-1"></i>Précédent
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, result = ViewBag.SelectedResult })">@i</a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex + 1, result = ViewBag.SelectedResult })">
                                Suivant<i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                Aucun entretien trouvé. <a href="@Url.Action("Candidates", "Recruitment")">Programmer un entretien</a>
            </div>
        }
    </div>
</div>