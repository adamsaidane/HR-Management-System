@model HRMS.ViewModels.PromotionFormViewModel
@{
    ViewData["Title"] = "Nouvelle Promotion";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-chart-line me-2"></i>Enregistrer une Promotion</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="EmployeeId" class="form-label"></label>
                            <select asp-for="EmployeeId" class="form-select" id="employeeSelect">
                                <option value="">-- Sélectionner un employé --</option>
                                @foreach (var employee in Model.Employees)
                                {
                                    <option value="@employee.EmployeeId" 
                                            data-position="@employee.Position.Title"
                                            data-salary="@employee.Position.BaseSalary">
                                        @employee.FullName - @employee.Matricule (@employee.Position.Title)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PromotionDate" class="form-label"></label>
                            <input asp-for="PromotionDate" class="form-control" type="date" />
                            <span asp-validation-for="PromotionDate" class="text-danger"></span>
                        </div>

                        <!-- Informations actuelles (affichées dynamiquement) -->
                        <div class="col-12" id="currentInfoSection" style="display:none;">
                            <div class="alert alert-info">
                                <h6 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Informations Actuelles</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Poste actuel:</strong> <span id="currentPosition">-</span></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Salaire actuel:</strong> <span id="currentSalary">-</span> DT</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NewPositionId" class="form-label"></label>
                            <select asp-for="NewPositionId" class="form-select" id="positionSelect">
                                <option value="">-- Sélectionner le nouveau poste --</option>
                                @foreach (var position in Model.Positions)
                                {
                                    <option value="@position.PositionId" data-basesalary="@position.BaseSalary">
                                        @position.Title (Salaire de base: @position.BaseSalary.ToString("N2") DT)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="NewPositionId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NewSalary" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="NewSalary" class="form-control" type="number" step="0.01" 
                                       placeholder="Nouveau salaire" id="newSalaryInput" />
                                <span class="input-group-text">DT</span>
                            </div>
                            <span asp-validation-for="NewSalary" class="text-danger"></span>
                            <small class="text-muted">Le salaire sera automatiquement rempli selon le poste sélectionné</small>
                        </div>

                        <div class="col-12">
                            <label asp-for="Justification" class="form-label"></label>
                            <textarea asp-for="Justification" class="form-control" rows="4" 
                                      placeholder="Expliquez les raisons de cette promotion..."></textarea>
                            <span asp-validation-for="Justification" class="text-danger"></span>
                        </div>

                        <!-- Résumé de la promotion -->
                        <div class="col-12" id="promotionSummary" style="display:none;">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-clipboard-check me-2"></i>Résumé de la Promotion</h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Augmentation de salaire:</strong> <span id="salaryIncrease" class="text-success">-</span></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Pourcentage d'augmentation:</strong> <span id="increasePercent" class="text-success">-</span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-rocket me-2"></i>Enregistrer la Promotion
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const employeeSelect = document.getElementById('employeeSelect');
            const positionSelect = document.getElementById('positionSelect');
            const newSalaryInput = document.getElementById('newSalaryInput');
            const currentInfoSection = document.getElementById('currentInfoSection');
            const currentPosition = document.getElementById('currentPosition');
            const currentSalary = document.getElementById('currentSalary');
            const promotionSummary = document.getElementById('promotionSummary');
            const salaryIncrease = document.getElementById('salaryIncrease');
            const increasePercent = document.getElementById('increasePercent');

            let currentSalaryValue = 0;

            // Afficher les infos de l'employé sélectionné
            employeeSelect.addEventListener('change', function() {
                const selected = this.options[this.selectedIndex];
                if (this.value) {
                    currentPosition.textContent = selected.getAttribute('data-position');
                    currentSalaryValue = parseFloat(selected.getAttribute('data-salary'));
                    currentSalary.textContent = currentSalaryValue.toFixed(2);
                    currentInfoSection.style.display = 'block';
                    calculateIncrease();
                } else {
                    currentInfoSection.style.display = 'none';
                    promotionSummary.style.display = 'none';
                }
            });

            // Auto-remplir le nouveau salaire selon le poste
            positionSelect.addEventListener('change', function() {
                const selected = this.options[this.selectedIndex];
                if (this.value) {
                    const baseSalary = selected.getAttribute('data-basesalary');
                    newSalaryInput.value = baseSalary;
                    calculateIncrease();
                }
            });

            // Calculer l'augmentation
            newSalaryInput.addEventListener('input', calculateIncrease);

            function calculateIncrease() {
                const newSalary = parseFloat(newSalaryInput.value);
                if (currentSalaryValue && newSalary && employeeSelect.value) {
                    const increase = newSalary - currentSalaryValue;
                    const percent = ((increase / currentSalaryValue) * 100).toFixed(2);
                    
                    salaryIncrease.textContent = `${increase >= 0 ? '+' : ''}${increase.toFixed(2)} DT`;
                    salaryIncrease.className = increase >= 0 ? 'text-success' : 'text-danger';
                    
                    increasePercent.textContent = `${percent}%`;
                    increasePercent.className = percent >= 0 ? 'text-success' : 'text-danger';
                    
                    promotionSummary.style.display = 'block';
                } else {
                    promotionSummary.style.display = 'none';
                }
            }
        });
    </script>
}