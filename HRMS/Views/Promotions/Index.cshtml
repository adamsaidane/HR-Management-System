@model IEnumerable<HRMS.Models.Promotion>
@{
    ViewData["Title"] = "Promotions";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-chart-line me-2"></i>Promotions</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nouvelle Promotion
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Employé</th>
                    <th>Ancien Poste</th>
                    <th>Nouveau Poste</th>
                    <th>Ancien Salaire</th>
                    <th>Nouveau Salaire</th>
                    <th>Augmentation</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var promo in Model)
                {
                    <tr>
                        <td>@promo.PromotionDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <smart-link entity="@promo.Employee" class="smart-link">
                                <strong>@promo.Employee.FullName</strong>
                            </smart-link>
                        </td>
                        <td>
                            <smart-link entity="@promo.OldPosition" class="smart-link">
                            <span class="badge bg-danger">@promo.OldPosition.Title</span>
                            </smart-link>
                        </td>
                        <td>
                            <smart-link entity="@promo.NewPosition" class="smart-link">
                                <span class="badge bg-success">@promo.NewPosition.Title</span>
                            </smart-link>
                        </td>
                        <td>@promo.OldSalary.ToString("N2") DT</td>
                        <td><strong>@promo.NewSalary.ToString("N2") DT</strong></td>
                        <td class="text-success fw-bold">+@((promo.NewSalary - promo.OldSalary).ToString("N2")) DT</td>
                    </tr>
                }
                </tbody>
            </table>
            <partial name="_Pagination" model="Model" />
        </div>
    </div>
</div>