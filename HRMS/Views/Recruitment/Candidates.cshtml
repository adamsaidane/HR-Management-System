@model HRMS.ViewModels.PaginatedList<HRMS.Models.Candidate>
@{
    ViewData["Title"] = "Candidats";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-user-graduate me-2"></i>Candidats</h1>
    <a asp-action="CreateCandidate" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nouveau Candidat
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                <tr>
                    <th>Nom</th>
                    <th>Age</th>
                    <th>Genre</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Offre</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var candidate in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <smart-link entity="@candidate" class="smart-link">
                                <strong>@candidate.FullName</strong>
                            </smart-link>
                        </td>
                        <td class="align-middle">@candidate.Age</td>
                        <td class="align-middle">@candidate.Gender</td>
                        <td class="align-middle">@candidate.Email</td>
                        <td class="align-middle">@candidate.Phone</td>
                        <td class="align-middle">@candidate.JobOffer.Title</td>
                        <td class="align-middle">@candidate.ApplicationDate.ToString("dd/MM/yyyy")</td>
                        <td class="align-middle">
                            <span class="badge bg-@(candidate.Status == HRMS.Enums.CandidateStatus.CandidatureReçue ? "info" :
                                                  candidate.Status == HRMS.Enums.CandidateStatus.Entretien ? "warning" :
                                                  candidate.Status == HRMS.Enums.CandidateStatus.Accepté ? "success" : "danger") fs-6">
                                @candidate.Status
                            </span>
                        </td>
                        <td>
                            <a asp-action="CandidateDetails" asp-route-id="@candidate.CandidateId" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <partial name="_Pagination" model="Model" />
        </div>
    </div>
</div>