@model HRMS.ViewModels.JobOfferFormViewModel
@{
    ViewData["Title"] = "Nouvelle Offre d'Emploi";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-briefcase me-2"></i>Créer une Offre d'Emploi</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" asp-action="CreateJobOffer">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="JobOffer.Title" class="form-label"></label>
                            <input asp-for="JobOffer.Title" class="form-control" 
                                   placeholder="Ex: Développeur Full Stack Senior" />
                            <span asp-validation-for="JobOffer.Title" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="JobOffer.DepartmentId" class="form-label"></label>
                            <select asp-for="JobOffer.DepartmentId" id="departmentSelect" class="form-select">
                                <option value="">-- Sélectionner un département --</option>
                                @foreach (var dept in Model.Departments as List<HRMS.Models.Department>)
                                {
                                    <option value="@dept.DepartmentId">@dept.Name</option>
                                }
                            </select>
                            <span asp-validation-for="JobOffer.DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="JobOffer.PositionId" class="form-label"></label>
                            <select asp-for="JobOffer.PositionId" id="positionSelect" class="form-select">
                                <option value="">-- Sélectionner un poste --</option>
                                @foreach (var pos in Model.Positions as List<HRMS.Models.Position>)
                                {
                                    <option value="@pos.PositionId" data-department="@pos.DepartmentId">
                                        @pos.Title (Salaire: @pos.BaseSalary.ToString("N0") DT)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="JobOffer.PositionId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="JobOffer.PostDate" class="form-label"></label>
                            <input asp-for="JobOffer.PostDate" class="form-control" type="date" />
                            <span asp-validation-for="JobOffer.PostDate" class="text-danger"></span>
                            <small class="text-muted">Date de publication de l'offre</small>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="JobOffer.ExpiryDate" class="form-label"></label>
                            <input asp-for="JobOffer.ExpiryDate" class="form-control" type="date" />
                            <span asp-validation-for="JobOffer.ExpiryDate" class="text-danger"></span>
                            <small class="text-muted">Date limite de candidature (optionnel)</small>
                        </div>

                        <div class="col-12">
                            <label asp-for="JobOffer.Description" class="form-label"></label>
                            <textarea asp-for="JobOffer.Description" class="form-control" rows="10" 
                                      placeholder="Décrivez le poste, les responsabilités, les compétences requises, les avantages..."></textarea>
                            <span asp-validation-for="JobOffer.Description" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-lightbulb me-2"></i>Conseils pour une bonne description</h6>
                                    <ul class="mb-0 small">
                                        <li>Décrivez clairement les missions et responsabilités du poste</li>
                                        <li>Listez les compétences techniques et soft skills requises</li>
                                        <li>Mentionnez les qualifications et l'expérience nécessaires</li>
                                        <li>Indiquez les avantages offerts (salaire, formations, évolution...)</li>
                                        <li>Précisez le processus de candidature</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="JobOffer.Status" class="form-label"></label>
                            <select asp-for="JobOffer.Status" class="form-select">
                                <option value="0" selected>Ouverte</option>
                                <option value="1">Fermée</option>
                                <option value="2">Pourvue</option>
                            </select>
                            <span asp-validation-for="JobOffer.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Publier l'Offre
                        </button>
                        <a asp-action="JobOffers" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Définir la date du jour par défaut
        document.addEventListener('DOMContentLoaded', function() {
            const postDateInput = document.querySelector('input[name="PostDate"]');
            if (!postDateInput.value) {
                postDateInput.value = new Date().toISOString().split('T')[0];
            }
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const departmentSelect = document.getElementById('departmentSelect');
            const positionSelect = document.getElementById('positionSelect');

            const allOptions = Array.from(positionSelect.querySelectorAll('option[data-department]'));

            departmentSelect.addEventListener('change', function() {
                const deptId = this.value;

                positionSelect.innerHTML = '<option value="">-- Sélectionner un poste --</option>';

                if (!deptId) return;

                const filtered = allOptions.filter(opt => opt.dataset.department === deptId);

                if (filtered.length === 0) {
                    const option = document.createElement('option');
                    option.value = '';
                    option.text = '-- Aucun poste disponible --';
                    positionSelect.appendChild(option);
                    positionSelect.disabled = true;
                } else {
                    positionSelect.disabled = false;
                    filtered.forEach(opt => positionSelect.appendChild(opt));
                    positionSelect.selectedIndex = 1;
                }
            });

            if (departmentSelect.value) {
                departmentSelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
}